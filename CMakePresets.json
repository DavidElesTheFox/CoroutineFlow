{
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 28,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "dev-g++",
            "displayName": "Developement Config g++",
            "description": "Developement build config",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": {
                    "type": "BOOL",
                    "value": "TRUE"
                },
                "CF_BUILD_EXAMPLES": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "CF_BUILD_TESTS": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "CMAKE_BUILD_TYPE": "Debug",
                "CF_COMPILE_OPTIONS": "-O2;-g"
            }
        },
        {
            "name": "dev-clang",
            "displayName": "Developement Config clang",
            "description": "Developement build config",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "toolchainFile": "${sourceDir}/cmake/clang_toolchain.cmake",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": {
                    "type": "BOOL",
                    "value": "TRUE"
                },
                "CF_BUILD_EXAMPLES": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "CF_BUILD_TESTS": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "CMAKE_BUILD_TYPE": "Debug",
                "CF_COMPILE_OPTIONS": "-O2;-g"
            }
        },
        {
            "name": "dev-clang-thread-sanitizer",
            "displayName": "Developement Config clang threadsanitizer",
            "description": "Developement build config with thread sanitizer",
            "inherits": "dev-clang",
            "cacheVariables": {
                "CF_COMPILE_OPTIONS": "-O2;-g;-fsanitize=thread",
                "CF_LINK_OPTIONS": "-fsanitize=thread"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "dev-g++-build",
            "configurePreset": "dev-g++",
            "configuration": "Debug"
        },
        {
            "name": "dev-clang-build",
            "configurePreset": "dev-clang",
            "configuration": "Debug"
        },
        {
            "name": "dev-clang-thread-sanitizer-build",
            "configurePreset": "dev-clang-thread-sanitizer",
            "configuration": "Debug"
        }
    ]
}