{
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 28,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "dev",
            "displayName": "Developement Config",
            "description": "Developement build config",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": {
                    "type": "BOOL",
                    "value": "TRUE"
                },
                "CF_BUILD_EXAMPLES": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "CF_BUILD_TESTS": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "CMAKE_BUILD_TYPE": "Debug",
                "CF_COMPILE_OPTIONS": "-O2;-g"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "dev-build",
            "configurePreset": "dev",
            "configuration": "Debug"
        }
    ]
}